{
  "name": "start-page",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "antd": "^3.26.6",
    "node-sass": "^4.13.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-redux": "^7.1.3",
    "react-scripts": "3.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "yarn lint:css && react-scripts build",
    "test": "yarn lint:css && react-scripts test",
    "eject": "react-scripts eject",
    "lint": "yarn lint:css && yarn lint:js",
    "lint:css": "./node_modules/stylelint/bin/stylelint.js ./src/sass/**/*.scss",
    "lint:js": "eslint ./src/**/*.js",
    "watch": "cra-build-watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "yarn lint",
      "yarn prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cra-build-watch": "^3.0.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "flow-bin": "^0.115.0",
    "flow-typed": "^2.6.2",
    "husky": "^4.0.7",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "redux-devtools-extension": "^2.13.8",
    "stylelint": "^13.0.0",
    "stylelint-config-standard": "^19.0.0"
  }
}
